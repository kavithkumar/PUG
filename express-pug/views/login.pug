doctype html 
html 
    head 
        title login 
    body 
        h3 Login Form
        form(action="/submit",method='post')
            label(for="email") Email: 
            input(type="email",name="email",id="email")
            br
            label(for="pwd") Password: 
            input(type="password",name="pwd",id="pwd")
            br
            button(type=submit) Submit
